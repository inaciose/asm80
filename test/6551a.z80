            LD      a,0x01 
            OUT     (0x00),a 
            NOP      



; show cmd reg
            IN      a,(ACIA_CMD) 
            OUT     (0x00),a 
            NOP      
            LD      a,0x00 
            OUT     (0x00),a 
            NOP      

; show ctl reg
            IN      a,(ACIA_CTL) 
            OUT     (0x00),a 
            NOP      
            LD      a,0x00 
            OUT     (0x00),a 
            NOP      

; show stat reg
            IN      a,(ACIA_STAT) 
            OUT     (0x00),a 
            NOP      
            LD      a,0x00 
            OUT     (0x00),a 
            NOP      

; transmit char


            LD      a,$68 
            OUT     (ACIA_DATA),a 
            NOP      

            LD      a,$65 
            OUT     (ACIA_DATA),a 
            NOP      

            LD      a,$6C 
            OUT     (ACIA_DATA),a 
            NOP      

            LD      a,$6C 
            OUT     (ACIA_DATA),a 
            NOP      

            LD      a,$6f 
            OUT     (ACIA_DATA),a 
            NOP      

            LD      a,$20 
